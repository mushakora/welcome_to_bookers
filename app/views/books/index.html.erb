<div class="container">
  <p id="notice"></p>
  <div class="row">
  <div class="col-xs-3">
   <% if flash[:notice] %>
    <p><%= flash[:notice] %></p>
   <% end %>
<%= render 'books/list', user: @user, book: @book %>
</div>
<h2>Books</h2>
  <div class="col-xs-9">
   <table class="table table-striped">
 <table class="table table-striped">
   <thead>
   	<tr>
   	 <th>写真</th>
   	 <th>Title</th>
   	 <th>Opinion</th>
   	</tr>
   </thead>
   <tbody>
   	<% @books.each do |book| %>
   	 <tr>
   	  <td><%= link_to user_path(book.user.id) do %>
          <%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
          <% end %>
        </td>
   	  <td><%= link_to book.title, book_path(book.id) %>
      </td>
   	  <td><%= book.body %></td>
   	 </tr>
   	<% end %>
   </tbody>
 </table>
 </div>
 </div>
</div>


　
