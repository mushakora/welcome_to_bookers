<h1>Books</h1>
 <table>
   <thead>
   	<tr>
   	 <th>写真</th>
   	 <th>Title</th>
   	 <th>Opinion</th>
   	</tr>
   </thead>
   <tbody>
   	<% @books.each do |book| %>
   	 <tr>
   	  <td>写真</td>
   	  <td><%= book.title %></td>
   	  <td><%= book.body %></td>
   	 </tr>
   	<% end %>
   </tbody>
 </table>
 <div class="side">
 <h2>User info</h2>
  <%= form_for(@book, url: 'books#index') do |f| %>
  <%= render 'layouts/error_messages', model: f.object %>
    <h4>写真<%= f.attachment_field :image %></h4>
    <h4>name</h4>
    <h4>introduction</h4>

    <h4><%= f.submit 'user edit' %></h4>
  <% end %>

 <h2>New book</h2>
  <%= form_for(@book, url: 'books#index') do |f| %>
  <%= render 'layouts/error_messages', model: f.object %>
    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Opinion</h4>
    <%= f.text_area :body %>

    <h4><%= f.submit 'Create Book' %></h4>
  <% end %>

　
