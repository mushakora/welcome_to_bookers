<div class="container">
  <p id="notice"></p>
  <div class="row">
  <div class="col-xs-3">
    <%= render 'books/list', user: current_user, book: @book %>
  </div>
  <h2>User</h2>
  <div class="col-xs-9">
   <table class="table table-striped">
     <thead>
   	  <tr>
   	   <th>image</th>
   	   <th>name</th>
   	   <th></th>
   	  </tr>
     </thead>
     <tbody>
   	  <% @users.each do |user| %>
   	   <tr>
   	    <td><%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %></td>
   	    <td><%= user.name %></td>
   	    <td><%= link_to 'Show', user_path(user.id)%></td>
   	   </tr>
   	  <% end %>
     </tbody>
   </table>
  </div>
  </div>
 </div>