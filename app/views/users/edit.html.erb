<div class="container">
  <p id="notice"></p>
  <div class="row">
  <div class="col-md-6 col-md-offset-3">
  </div>
<h1>User info</h1>

<%= form_for(@user) do |f| %>
<% if @user.errors.any? %>
  <div class="alert alert-warning">
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <a>error</a>
      <% end %>
    </ul>
  </div>
<% end %>
   <h4>Name</h4>
   <%= f.text_field :name %>

   <h4>Image</h4>
   <%= f.attachment_field :profile_image %>

   <h4>Introduction</h4>
   <%= f.text_area :introduction %>

   <%= f.submit 'Update User' %>
<% end %>
